# ================================
# ENVIRONMENT CONFIGURATION EXAMPLE
# ================================
# Copy this file to .env and fill in your values

# Database
DATABASE_URL=postgresql://username:password@host/database

# Security
SECRET_KEY=your-secret-key-here-change-this
ALGORITHM=HS256

# AWS SES (Email Service)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=eu-central-1
AWS_SES_FROM_EMAIL=noreply@yourapp.com

# Hetzner S3-compatible Object Storage
S3_ACCESS_KEY_ID=your-s3-access-key
S3_SECRET_ACCESS_KEY=your-s3-secret-key
S3_ENDPOINT_URL=https://nbg1.your-objectstorage.com
S3_BUCKET_NAME=your-bucket-name
S3_REGION=nbg1

# Investagon API
INVESTAGON_ORGANIZATION_ID=your-organization-id
INVESTAGON_API_KEY=your-api-key
ENABLE_AUTO_SYNC=false

# OAuth (per-tenant configuration via API)
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Application
APP_NAME=Enterprise Multi-Tenant App
BASE_URL=https://api.yourapp.com
FRONTEND_URL=https://app.yourapp.com

# Super Admin (initial setup)
SUPER_ADMIN_EMAIL=admin@yourcompany.com
SUPER_ADMIN_PASSWORD=ChangeThisPassword123!

# Debug
DEBUG=false

# ================================
# TEST CONFIGURATION
# ================================

# Test Server Configuration
TEST_BASE_URL=http://localhost:8000
TEST_ADMIN_EMAIL=admin@yourcompany.com
TEST_ADMIN_PASSWORD=ChangeThisPassword123!

# Test Performance Thresholds (in seconds)
TEST_PERF_LIST_ENDPOINT=2.0
TEST_PERF_DETAIL_ENDPOINT=1.0
TEST_PERF_CREATE_ENDPOINT=3.0

# Test Settings
TEST_TIMEOUT=10
TEST_PAGE_SIZE=5